<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:background="@color/white">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:id="@+id/imageView"
        android:layout_gravity="top"
        android:src="@drawable/room"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="24dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/room_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Description"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="12dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of rooms: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/number_of_beds"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK IT"
        android:id="@+id/reservation"
        android:layout_gravity="center_horizontal"/>
</LinearLayout><!-- From: file:/home/stvorenje/Documents/BothApps/BITBooking/app/src/main/res/layout/room_fragment.xml -->